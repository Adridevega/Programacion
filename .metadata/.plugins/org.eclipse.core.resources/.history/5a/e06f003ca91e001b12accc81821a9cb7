package paqueteDam;
import java.util.Scanner;

public class Ejercicio01_3 {

	public static void main(String[] args) {
		boolean respuesta = true;
		int horas, minutos, segundos, segundosEnToral;
		
		while(respuesta) {
			horas=generarAletorio(10);
			minutos=generarAletorio(200);
			segundos=generarAletorio(200);
			mostrasTiempo(horas, minutos, segundos);
			calcularHorasMinutosSegundos(segundosEnToral);
			respuesta=deseaContinuar();
			
			
		}
	}


	

	 static boolean deseaContinuar() {
		char respuesta;
		respuesta=Teclado.leerCaracter("Desea continuar? (s/n) : ");
		if(respuesta=='s' || respuesta=='S')
			return true;
		else {
			return false;
		}
		
	}
	 static int generarAletorio(int i) {
		return (int)(Math.random()*i);
	}


	static int calularSegundosEnTorales (int horas ,int minutos ,int segundos) {
		return ((horas*3600)+(minutos+60)+segundos);
		
	}
	 static void calcularHorasMinutosSegundos(int segundosEnToral) {
		int horas, minutos, segundos;
		horas=segundosEnToral/3600;
		segundosEnToral=segundosEnToral%3600;
		minutos=segundosEnToral/60;
		segundosEnToral=segundosEnToral%60;
		segundos=segundosEnToral;
		System.out.println("El tiempo expresado correctamente es: ");
		mostrasTiempo(horas,minutos,segundos);
	}
	 static void mostrasTiempo(int horas, int minutos, int segundos) {
		 System.out.println("\n" + horas + "h " + minutos + "m " + segundos + "s\n");
	 }

	
	}


